<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.healthpatient.patientapp.HomeFragment">

    <!-- TODO: Update blank fragment layout -->


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:cardCornerRadius="6dp"
        android:id="@+id/schedulecard"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_below="@+id/searchcard"
       >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/md_grey_500"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/schedule"
                android:text="Schedule Appointments"
                android:textSize="20dp"
                android:fontFamily="sans-serif-medium"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />

            <ImageButton android:layout_width="40dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_menu_send"
                android:id="@+id/imageButton2"
                android:background="@color/md_grey_500"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
     android:layout_width="match_parent"
     android:layout_height="60dp"
        android:id="@+id/searchcard"
        app:cardCornerRadius="6dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:layout_centerInParent="true"
        >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/md_grey_500"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/search"
            android:text="Search Labs"
            android:textSize="20dp"
            android:fontFamily="sans-serif-medium"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            />
        <ImageButton android:layout_width="40dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_menu_send"
            android:id="@+id/imageButton"
            android:background="@color/md_grey_500"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>

</android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="8dp"
        app:cardCornerRadius="6dp"
        android:id="@+id/Reschedulecard"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_below="@+id/schedulecard"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/md_grey_500"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/reschedule"
                android:text="ReSchedule Appointments"
                android:textSize="20dp"
                android:fontFamily="sans-serif-medium"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />

            <ImageButton android:layout_width="40dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_menu_send"
                android:id="@+id/imageButton3"
                android:background="@color/md_grey_500"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>


</RelativeLayout>

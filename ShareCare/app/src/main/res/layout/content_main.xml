<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.healthpatient.patientapp.MainActivity"
    tools:showIn="@layout/activity_main">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/upper"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        >
        <android.support.v7.widget.CardView
            android:layout_width="170dp"
            android:layout_height="180dp"
            android:id="@+id/donate_card"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:src="@mipmap/ic_launcher"
                    android:id="@+id/donate"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/donate"
                    android:text="DONATE"
                    android:layout_marginLeft="35dp"
                    style="@style/MyTextTheme_Heading"
                    />

            </RelativeLayout>


        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="170dp"
            android:layout_height="180dp"
            android:id="@+id/card_diagnose"
            android:layout_marginLeft="8dp"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:src="@mipmap/ic_launcher"
                    android:id="@+id/diagnose"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/diagnose"
                    android:text="DIAGNOSE"
                    style="@style/MyTextTheme_Heading"
                    android:layout_marginLeft="30dp"
                    />
            </RelativeLayout>


        </android.support.v7.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/middle"
        android:layout_below="@+id/upper"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        >

        <android.support.v7.widget.CardView
            android:layout_width="170dp"
            android:layout_height="180dp"
            android:id="@+id/take_card">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:src="@mipmap/ic_launcher"
                    android:id="@+id/take_photo"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/take_photo"
                    android:text="TAKE"
                    style="@style/MyTextTheme_Heading"
                    android:layout_marginLeft="55dp"
                    />

            </RelativeLayout>


        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="170dp"
            android:layout_height="180dp"
            android:layout_marginLeft="8dp"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:src="@mipmap/ic_launcher"
                    android:id="@+id/report_image"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/report_image"
                    android:text="REPORTS"
                    style="@style/MyTextTheme_Heading"
                    android:layout_marginLeft="35dp"
                    />
            </RelativeLayout>


        </android.support.v7.widget.CardView>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lower"
        android:layout_below="@+id/middle"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp">

        <android.support.v7.widget.CardView
            android:layout_width="170dp"
            android:layout_height="180dp"
            android:id="@+id/about_card">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:src="@mipmap/ic_launcher"
                    android:id="@+id/about"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/about"
                    android:text="ABOUT US"
                    android:layout_marginLeft="35dp"
                    style="@style/MyTextTheme_Heading"
                    />

            </RelativeLayout>


        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="170dp"
            android:layout_height="180dp"
            android:layout_marginLeft="8dp"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:src="@mipmap/ic_launcher"
                    android:id="@+id/Facility"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/Facility"
                    android:text="NoT Decided"
                    style="@style/MyTextTheme_Heading"
                    android:layout_marginLeft="30dp"
                    />
            </RelativeLayout>


        </android.support.v7.widget.CardView>

    </LinearLayout>
    </RelativeLayout>
</ScrollView>

<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ShareCare"
    tools:showIn="@layout/activity_main">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/iconbg">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/front"
            android:id="@+id/front"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ShareCare"
            android:textSize="25dp"
            android:fontFamily="sans-serif-medium"
            android:layout_below="@+id/front"
            android:id="@+id/fronttext"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fronttext"
        android:id="@+id/upper"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        >
        <android.support.v7.widget.CardView
            android:layout_width="170dp"
            android:layout_height="180dp"
            android:id="@+id/donate_card"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:src="@drawable/meeting"
                    android:id="@+id/donate"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/donate"
                    android:text="DONATE"
                    android:gravity="center"
                       style="@style/MyTextTheme_SubHeading"
                    />

            </RelativeLayout>


        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="170dp"
            android:layout_height="180dp"
            android:id="@+id/card_diagnose"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/donate_card"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:src="@drawable/smile"
                    android:id="@+id/diagnose"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/diagnose"
                    android:text="DIAGNOSE"
                    style="@style/MyTextTheme_Heading"
                    android:gravity="center"
                    />
            </RelativeLayout>


        </android.support.v7.widget.CardView>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/middle"
        android:layout_below="@+id/upper"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        >

        <android.support.v7.widget.CardView
            android:layout_width="170dp"
            android:layout_height="180dp"
            android:id="@+id/take_card">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:src="@drawable/acceptor"
                    android:id="@+id/take_photo"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/take_photo"
                    android:text="ACCEPTOR"
                    style="@style/MyTextTheme_Heading"
                    android:gravity="center"
                    />

            </RelativeLayout>


        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="170dp"
            android:layout_height="180dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/take_card"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:src="@drawable/reportsfin"
                    android:id="@+id/report_image"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/report_image"
                    android:text="REPORTS"
                    style="@style/MyTextTheme_Heading"
                    android:gravity="center"
                    />
            </RelativeLayout>


        </android.support.v7.widget.CardView>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lower"
        android:layout_below="@+id/middle"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp">

        <android.support.v7.widget.CardView
            android:layout_width="170dp"
            android:layout_height="180dp"
            android:id="@+id/about_card">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:src="@drawable/logosharecare"
                    android:id="@+id/about"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/about"
                    android:text="ABOUT US"
                    android:gravity="center"
                    style="@style/MyTextTheme_Heading"
                    />

            </RelativeLayout>


        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="170dp"
            android:layout_height="180dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/about_card"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:src="@drawable/facilities"
                    android:id="@+id/Facility"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/Facility"
                    android:text="FACILITIES"
                    style="@style/MyTextTheme_Heading"
                    android:gravity="center"
                    />
            </RelativeLayout>


        </android.support.v7.widget.CardView>

    </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lowermore"
            android:layout_below="@+id/lower"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp">

            <android.support.v7.widget.CardView
                android:layout_width="170dp"
                android:layout_height="180dp"
                android:id="@+id/contact_card">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:src="@drawable/contact_us"
                        android:id="@+id/contact"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/contact"
                        android:text="CONTACT US"
                        android:gravity="center"
                        style="@style/MyTextTheme_Heading"
                        />

                </RelativeLayout>


            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="170dp"
                android:layout_height="180dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@+id/contact_card"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:src="@drawable/health_tips"
                        android:id="@+id/healthtips"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/healthtips"
                        android:text="HEALTH TIPS"
                        style="@style/MyTextTheme_Heading"
                        android:gravity="center"
                        />
                </RelativeLayout>


            </android.support.v7.widget.CardView>

        </RelativeLayout>
    </RelativeLayout>
</ScrollView>

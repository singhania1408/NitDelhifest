<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.healthpatient.patientapp.LabActivity"
    tools:showIn="@layout/activity_lab">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        app:cardCornerRadius="5dp"
        android:id="@+id/lab1"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:padding="8dp"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imagelab1"
                />
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/labname1"
                android:text="LAB NAME"
                android:textSize="20dp"
                android:fontFamily="sans-serif-family"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/imagelab1"
                />

            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/details1"
                android:text="Some Details about Lab"
                android:textSize="20dp"
                android:fontFamily="sans-serif-family"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/labname1"
                android:layout_toRightOf="@+id/imagelab1"
                />

            <TextView
                android:layout_width="wrap_content"
                android:text="Other Contents"
                android:textSize="20dp"
                android:id="@+id/other1"
                android:fontFamily="sans-serif-family"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/details1"
                android:layout_toRightOf="@+id/imagelab1"
                />
            <TextView
                android:layout_width="wrap_content"
                android:text="Street "
                android:textSize="20dp"
                android:fontFamily="sans-serif-family"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/other1"
                android:layout_toRightOf="@+id/imagelab1"
                android:layout_marginBottom="10dp"
                />


            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_toRightOf="@+id/labname1"
                android:layout_marginLeft="90dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:padding="5dp"
                    android:background="@color/md_red_800"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"

                        android:layout_height="wrap_content"
                        android:textSize="25dp"
                        android:textColor="@color/md_white_1000"
                        android:text="$ 999"/>
                </RelativeLayout>
            </android.support.v7.widget.CardView>


        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        app:cardCornerRadius="5dp"
        android:id="@+id/lab2"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lab1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:padding="8dp"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imagelab"
                />
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/labname"
                android:text="LAB NAME"
                android:textSize="20dp"
                android:fontFamily="sans-serif-family"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/imagelab"
                />

            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/details"
                android:text="Some Details about Lab"
                android:textSize="20dp"
                android:fontFamily="sans-serif-family"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/labname"
                android:layout_toRightOf="@+id/imagelab"
                />

            <TextView
                android:layout_width="wrap_content"
                android:text="Other Contents"
                android:textSize="20dp"
                android:id="@+id/other"
                android:fontFamily="sans-serif-family"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/details"
                android:layout_toRightOf="@+id/imagelab"
                />
            <TextView
                android:layout_width="wrap_content"
                android:text="Street "
                android:textSize="20dp"
                android:fontFamily="sans-serif-family"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/other"
                android:layout_toRightOf="@+id/imagelab"
                android:layout_marginBottom="10dp"
                />


            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_toRightOf="@+id/labname"
                android:layout_marginLeft="90dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:padding="5dp"
                    android:background="@color/md_red_800"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"

                        android:layout_height="wrap_content"
                        android:textSize="25dp"
                        android:textColor="@color/md_white_1000"
                        android:text="$ 999"/>
                </RelativeLayout>
            </android.support.v7.widget.CardView>


        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>
